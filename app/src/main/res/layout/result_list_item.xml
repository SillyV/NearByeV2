<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/item_layout_container"

                android:orientation="vertical">

    <ImageView
        android:id="@+id/favorites_indicator"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_below="@+id/list_item_name"
        android:src="@drawable/favorites"/>

    <ImageView
        android:id="@+id/list_item_icon"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:paddingBottom="25dp"
        android:paddingTop="25dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/list_item_ratings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@+id/list_item_icon"
        android:layout_toRightOf="@+id/list_item_icon"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Small"/>

    <TextView
        android:id="@+id/list_item_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/list_item_ratings"
        android:layout_toEndOf="@+id/list_item_icon"
        android:layout_toRightOf="@+id/list_item_icon"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Small"/>

    <TextView
        android:id="@+id/list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/list_item_address"
        android:layout_toEndOf="@+id/list_item_icon"
        android:layout_toRightOf="@+id/list_item_icon"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Medium"/>


</RelativeLayout>