<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">

    <ImageView
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:src="@mipmap/ic_launcher"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:id="@+id/list_item_icon" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_ratings"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/list_item_icon"
        android:layout_toEndOf="@+id/list_item_icon"
        android:layout_marginBottom="16dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_address"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:layout_above="@+id/list_item_ratings"
        android:layout_toRightOf="@+id/list_item_icon"
        android:layout_toEndOf="@+id/list_item_icon" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_name"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_above="@+id/list_item_address"
        android:layout_toRightOf="@+id/list_item_icon"
        android:layout_toEndOf="@+id/list_item_icon" />

</RelativeLayout>